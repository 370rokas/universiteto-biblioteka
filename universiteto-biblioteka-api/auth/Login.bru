meta {
  name: Login
  type: http
  seq: 2
}

post {
  url: {{base_url}}/auth/login
  body: json
  auth: none
}

body:json {
  {
    "username": "{{username}}",
    "password": "{{password}}"
  }
}

script:post-response {
  if (res.body.ok == true) {
    bru.setEnvVar("authToken", res.body.token)
  }
}

settings {
  encodeUrl: true
  timeout: 0
}
